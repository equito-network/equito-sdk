{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,

    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true
  }
}
